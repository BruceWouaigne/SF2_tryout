<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bicloo stats{% endblock %}</title>
        {% block stylesheets %}
        <link href="{{ asset('bundles/bicloo/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/bicloo/datatable/css/DT_bootstrap.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}        
        <script src="{{ asset('bundles/bicloo/js/jquery-1.8.3.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/bicloo/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/bicloo/datatable/js/jquery.dataTables.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/bicloo/datatable/js/DT_bootstrap.js') }}" type="text/javascript"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            
            {% if app.session.hasFlash('notice') %}
                <div class="alert alert-success">
                    <strong>Information: </strong>{{ app.session.flash('notice') }}
                </div>
            {% endif %}
            
            {% if app.session.hasFlash('error') %}
                <div class="alert alert-error">
                    <strong>Error: </strong>{{ app.session.flash('error') }}
                </div>
            {% endif %}
        
            {% block body %}{% endblock %}
    </div>
    {% block javascripts %}{% endblock %}
    </body>
</html>
